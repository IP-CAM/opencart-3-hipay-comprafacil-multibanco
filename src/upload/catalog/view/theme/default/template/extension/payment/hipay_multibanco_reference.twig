<div id="hipay_multibanco_reference">
    <table border="1" cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" style="padding:5px 10px 0;"><p>{{ multibanco_payment_desc }}</p></th>
        </tr>
        <tr style="border:0px;">
            <td style="vertical-align:middle;text-align:center;padding:16px;border:0px;width:130px;">{{ multibanco_logo }}</td>
            <td>
                <table border="0" cellpadding="4" cellspacing="0">
                    <tr style="border:0px;">
                        <td style="text-align:right;padding:3px 6px;">{{ multibanco_entity }}:</td>
                        <td style="text-align:left;padding:3px 6px;font-weight:bold;">{{ multibanco_entity_value }}</td>
                    </tr>
                    <tr>
                        <td style="text-align:right;padding:3px 6px;">{{ multibanco_reference }}:</td>
                        <td style="text-align:left;padding:3px 6px;font-weight:bold;">{{ multibanco_reference_value }}</td>
                    </tr>
                    <tr>
                        <td style="text-align:right;padding:3px 6px;">{{ multibanco_amount }}:</td>
                        <td style="text-align:left;padding:3px 6px;font-weight:bold;">&euro; {{ multibanco_amount_value }}</td>
                    </tr>
                    <tr>
                        <td style="text-align:right;padding:3px 6px;">{{ multibanco_expiry_date }}</td>
                        <td style="text-align:left;padding:3px 6px;font-weight:bold;">{{ multibanco_expiry_date_value }}</td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</div>
